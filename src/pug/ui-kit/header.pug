extends ./layout/ui-layout.pug
include ./mixins/*.pug
include ./../mixins/*.pug


block variables
    - var title = 'Шапка сайта';
    - var pageClass = 'body--dashboard';

block content

    //- Заголовок компонента
    h1.ui-kit__component-title.
        Шапка сайта

    //- Демонстрация компонента
    .ui-kit__component-demo
        include ./../sections/header/header-main.pug


    .ui-kit__component-demo
        include ./../sections/header/header-inner.pug

    //- Код для вызова компонента
    .ui-kit__component-code
        pre.
            Шапка для главной (белый фон)
            include ./../sections/header/header-main.pug

            Шапка для внутренних страниц (серый фон)
            include ./../sections/header/header-inner.pug

    //- Файл в котором описан компонент
    .ui-kit__element-title.
        Название файла:

        Шапка с белым фоном
        sections/header/header-main.pug
        |
        Шапка с серым фоном
        sections/header/header-inner.pug


    //- Распечатка кода компонента
    .ui-kit__element-code
        pre.
            Шапка с белым фоном, главная страница

            .header.header--main
                include ./header__logo.pug
                include ./header__nav.pug


            Шапка с серым фоном:

            .header
                include ./header__logo.pug
                include ./header__nav.pug