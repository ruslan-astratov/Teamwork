extends ./layout/ui-layout.pug
include ./mixins/*.pug
include ./../mixins/*.pug

block variables
    - var title = 'Заголовки секций для внутренних страниц (без ссылок)';
    - var pageClass = 'body--dashboard';

block content

    //- Заголовок компонента
    h1.ui-kit__component-title.
        Заголовки секций для внутренних страниц (без ссылок)

    //- Демонстрация компонента
    .ui-kit__component-demo
        +sections-headings-inner("Обо мне")


    //- Код для вызова компонента
    .ui-kit__component-code
        pre.
            +sections-headings-inner("Обо мне")


    //- Файл в котором описан компонент
    .ui-kit__element-title.
        Название файла:
        mixins/sections-headings-inner.pug

    //- Распечатка кода компонента
    .ui-kit__element-code
        pre.
            mixin sections-headings-inner(text)
                .sections-headings-inner
                    h2 !&lcub;text}
                
